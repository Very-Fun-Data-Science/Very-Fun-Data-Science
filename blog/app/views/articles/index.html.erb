<div class="container py-4">
  <% @articles.each do |article| %>
    <div class="article card">
      <div class="card-header">
        <h2><%= article.title %></h2>
      </div>
      <div class="card-body">
        <p><%= article.text%></p>

        <div class="btn-group">
          <%= link_to 'Show', article_path(article), :class => "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
