<div class="container py-4">

  <div class="btn-group">
    <%= link_to 'New article', new_article_path, :class => 'btn btn-success' %>
    <%= link_to 'Logout', logout_path, :class => 'btn btn-danger' %>
  </div>

  <% @articles.each do |article| %>
    <div class="article card">
      <div class="card-header">
        <h2><%= article.title %></h2>
      </div>
        <div class="btn-group">
          <%= link_to 'Show', article_path(article), :class => "btn btn-outline-secondary" %>
          <%= link_to 'Edit', edit_article_path(article), :class => "btn btn-outline-secondary" %>
          <%= link_to 'Delete', article_path(article), method: :delete, :class => "btn btn-outline-secondary" %>
        </div>

      </div>
  <% end %>

</div>
