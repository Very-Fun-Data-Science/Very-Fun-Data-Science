<div class="container py-4">
  <p>
    <h2><%= @article.title %></h2>
    <h4>
      <%= @article.users.map(&:name).join(' & ') %>
    </h4>
  </p>

  <p>
    <%= format_markdown(@article.text) %>
  </p>

  <p> Tags:</p>
  <p>
    <%= @article.tag_list %>
  </p>

  <div class="card">
    <h3 class="card-header">Comments</h3>
    <%= render @article.comments %>
  </div>

  <div class="container py-4">
    <h4>Add a comment:</h4>
    <%= render 'comments/form' %>
  </div>
</div>
