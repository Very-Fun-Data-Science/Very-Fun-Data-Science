<div class="container">
  <div class="row justify-content-md-center">
    <div class="col col-lg-6 py-5">
      <h2 class="pb-2">Log in</h2>
      <div class="card">
        <div class="card-body">
          <%= form_for :session do |form| %>
            <div class="form-group">
              <%= form.label :email %>
              <%= form.text_field :email, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.label :password %>
              <%= form.password_field :password, class: 'form-control' %>
            </div>

            <%= form.submit 'Log in', class: 'btn btn-outline-primary btn-block' %>
          <% end %>

          <small class="text-center d-block pt-3">
            Don't have an account? <%= link_to 'Sign up', signup_path %>
          </small>
        </div>
      </div>
    </div>
  </div>
</div>
